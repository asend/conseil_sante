{% extends 'base.html.twig' %}

{% block title %}Certificat index{% endblock %}

{% block body %}
    <h1>Certificat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Avis_traitant</th>
                <th>Decision</th>
                <th>Plainte_doleance</th>
                <th>Examen_clinique</th>
                <th>Avis_medecin_conseil</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certificat in certificats %}
            <tr>
                <td>{{ certificat.id }}</td>
                <td>{{ certificat.avisTraitant }}</td>
                <td>{{ certificat.decision }}</td>
                <td>{{ certificat.plainteDoleance }}</td>
                <td>{{ certificat.examenClinique }}</td>
                <td>{{ certificat.avisMedecinConseil }}</td>
                <td>
                    <a href="{{ path('app_certificat_show', {'id': certificat.id}) }}">show</a>
                    <a href="{{ path('app_certificat_edit', {'id': certificat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_certificat_new') }}">Create new</a>
{% endblock %}
