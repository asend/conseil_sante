            <a href="{{ path('app_conseil_patient', {'id': conseil.id}) }}" class="btn btn-secondary"><i class="fa fa-user-plus"></i></a>
        </div>
        <div class="card-footer bg-transparent border-primary"> <a href="{{ path('coneil_patient', {'id': conseil.id}) }}" class="btn btn-info"><i class="fa fa-users"></i> {{ conseil.patients | length }} patients</a></div>
    </div>
</div>