<div class="col-md-3">
    <div class="card">
                    {# <img src="..." class="card-img-top" alt="..."> #}
        <div class="card-body">
            <h5 class="card-title">{{ conseil.nom }}</h5>
            <p class="card-text">{{ conseil.description }}</p>
            <a href="{{ path('app_conseil_show', {'id': conseil.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
            <a href="{{ path('app_conseil_edit', {'id': conseil.id}) }}" class="btn btn-success"><i class="fa fa-edit"></i></a>
